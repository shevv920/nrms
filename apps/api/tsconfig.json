{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"]
    },
    "target": "es2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "types": ["node", "reflect-metadata"]
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
